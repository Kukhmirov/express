<%- include('../port/head', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title">Название - <%= book.title %></h5>
                <p class="card-text">Описание - <%= book.description %></p>
                <p class="card-text">Автор - <%= book.authors %></p>
                <p class="card-text"><%= book.favorite %></p>
                <p class="card-text"><%= book.fileCover %></p>
                <p class="card-text">Книга - <%= book.fileName %></p>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/update/<%= book.id %>">
                        Редактировать
                    </a>
                    <form action="/upload/<%= book.id %>" method="GET" class="d-inline">
                        <button class="btn btn-sm btn-primary">
                            Скачать
                        </button>
                    </form>
                    <form action="/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../port/footer') %>