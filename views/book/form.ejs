<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input 
            type="text"
            value="<%= book.title %>"
            name="title"
            class="form-control"
            id="inputTitle"
        >
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
            rows="3"
            name="description"
            class="form-control"
            id="inputDesc"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputTitle">Автор</label>
        <input 
            type="text"
            value="<%= book.authors %>"
            name="authors"
            class="form-control"
            id="inputAuthors"
        >
    </div>
    <div class="form-group">
        <label for="inputTitle">Оценка</label>
        <input 
            type="number"
            value="<%= book.favorite %>"
            name="favorite"
            class="form-control"
            id="inputFavorite"
        >
    </div>
    <div class="form-group">
        <label for="inputTitle">Обложка</label>
        <input 
            type="text"
            value="<%= book.fileCover %>"
            name="fileCover"
            class="form-control"
            id="inputАileCover"
        >
    </div>
    <div class="form-group">
        <label for="inputTitle">Название книги</label>
        <input 
            type="text"
            value="<%= book.fileName %>"
            name="fileName"
            class="form-control"
            id="inputFileName"
        >
    </div>
    <div class="form-group">
        <label for="inputTitle">Книга</label>
        <input 
            type="file"
            value="<%= book.fileBook %>"
            name="fileBook"
            class="form-control"
            id="inputFileBook"
        >
    </div>
    

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>