<%- include('../port/head', {title: title}) %>
<%- include('../port/menu') %>

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">Книжная лавка</h1>
        <p class="lead font-weight-normal">Представленые книги настоятельно не рекомендованы к прочтению.</p>
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
</div>

<% if(books.length) { %>
    <div class="d-md-flex flex-column flex-md-equal w-100 my-md-3 pl-md-3 justify-content-center">
        <% books.map((el, idx) => {  %>
        <div
            class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 mb-5 text-center text-white overflow-hidden"
            style="height: 300px;"
        >
            <div>
                <h2 class="display-5"><%= el.title %></h2>
                <p class="lead"><%= el.authors %></p>
            </div>
            <div
                class="d-flex justify-content-around align-items-center bg-light shadow-sm mx-auto"
                style="width: 80%; height: 100px; border-radius: 21px;"
            >
                <a class="btn btn-sm btn-primary" href="/api/book/<%= el._id %>">Открыть</a>
                <form action="/api/update/<%= el.id %>" method="GET" class="d-inline">
                    <button class="btn btn-sm btn-primary">
                        Изменить
                    </button>
                </form>
                <form action="/api/delete/<%= el.id %>" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>
<% } else { %>   
    <h3 class="mt-5 text-center">Книг пока нет</h3>
<% } %>  

<%- include('../port/footer') %>